{
  "name": "lootscraper",
  "version": "2.13.0",
  "description": "RSS feeds and Telegram bot for free game and loot offers.",
  "license": "CC-BY-NC-SA-4.0",
  "author": "Eiko Wagenknecht <git@eiko-wagenknecht.de>",
  "bin": {
    "lootscraper": "./dist/main.js"
  },
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "cross-env DEBUG=\"grammy*\" tsx src/main.ts",
    "build": "vite build",
    "start": "node dist/main.js",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:contract": "vitest run --mode contract",
    "test:contract:watch": "vitest watch --mode contract",
    "test:all": "pnpm test && pnpm test:contract",
    "lint": "pnpm type-check && pnpm lint:oxlint && pnpm lint:oxfmt",
    "lint:oxlint": "oxlint",
    "lint:oxfmt": "oxfmt ./src ./tests --check",
    "format": "oxfmt ./src ./tests",
    "type-check": "tsc --noEmit",
    "check": "pnpm run lint && pnpm run type-check",
    "prepare": "node -e \"process.env.CI || process.env.DOCKER_CONTAINER || process.exit(1)\" || lefthook install",
    "clean:npm": "pnpm dlx rimraf -rf node_modules",
    "sync:npm": "pnpm i --frozen-lockfile",
    "upgrade:npm": "pnpm dlx rimraf pnpm-lock.yaml && pnpm up --latest && pnpm i",
    "knip": "knip",
    "docker:pub:dev": "docker build . -t eikowagenknecht/lootscraper:develop && docker push eikowagenknecht/lootscraper:develop"
  },
  "dependencies": {
    "@apollo/client": "4.1.2",
    "@grammyjs/auto-retry": "2.0.2",
    "@grammyjs/commands": "1.2.0",
    "abort-controller": "3.0.0",
    "basic-ftp": "5.1.0",
    "better-sqlite3": "12.6.2",
    "croner": "10.0.1",
    "cross-env": "10.1.0",
    "discord.js": "14.25.1",
    "grammy": "1.39.3",
    "graphql": "16.12.0",
    "handlebars": "4.7.8",
    "i18next": "25.8.0",
    "kysely": "0.28.10",
    "logform": "2.7.0",
    "luxon": "3.7.2",
    "playwright": "1.58.0",
    "winston": "3.19.0",
    "winston-daily-rotate-file": "5.0.0",
    "winston-transport": "4.9.0",
    "yaml": "2.8.2",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@commitlint/types": "20.3.1",
    "@semantic-release/git": "10.0.1",
    "@testing-library/jest-dom": "6.9.1",
    "@types/better-sqlite3": "7.6.13",
    "@types/luxon": "3.7.1",
    "@types/node": "24.10.9",
    "@vitest/coverage-v8": "4.0.18",
    "globals": "17.1.0",
    "jiti": "2.6.1",
    "knip": "5.82.1",
    "lefthook": "2.0.15",
    "oxfmt": "0.27.0",
    "oxlint": "1.42.0",
    "semantic-release": "25.0.2",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vitest": "4.0.18"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.28.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "oxc-resolver",
      "unrs-resolver"
    ],
    "ignoredBuiltDependencies": [
      "lefthook"
    ]
  }
}
