{
  "name": "lootscraper",
  "version": "2.0.0",
  "description": "RSS feeds and Telegram bot for free game and loot offers.",
  "author": "Eiko Wagenknecht <git@eiko-wagenknecht.de>",
  "license": "CC-BY-NC-SA-4.0",
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "cross-env DEBUG=\"grammy*\" vite-node src/main.ts",
    "build": "vite build",
    "start": "node dist/main.js",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:contract": "vitest run --mode contract",
    "test:contract:watch": "vitest watch --mode contract",
    "test:all": "pnpm test && pnpm test:contract",
    "lint": "tsc --noEmit && eslint --fix ./src && prettier --write ./src && biome check --fix --unsafe ./src ./tools",
    "lint:eslint": "eslint --fix ./src",
    "lint:biome": "biome check --write ./src",
    "lint:prettier": "prettier --write ./src",
    "format": "biome format . --write",
    "type-check": "tsc --noEmit",
    "check": "pnpm run lint && pnpm run type-check",
    "prepare": "lefthook install",
    "clean:npm": "pnpm exec rm -rf node_modules",
    "sync:npm": "pnpm i --frozen-lockfile",
    "upgrade:npm": "pnpm exec rm pnpm-lock.yaml && pnpm up --latest && pnpm i",
    "code:dump": "vite-node tools/codeDump.ts",
    "code:list": "vite-node tools/codeList.ts",
    "knip": "knip"
  },
  "dependencies": {
    "@grammyjs/commands": "1.0.3",
    "better-sqlite3": "11.7.0",
    "croner": "9.0.0",
    "cross-env": "7.0.3",
    "grammy": "1.33.0",
    "handlebars": "4.7.8",
    "kysely": "0.27.5",
    "logform": "2.7.0",
    "luxon": "3.5.0",
    "playwright": "1.49.1",
    "winston": "3.17.0",
    "winston-daily-rotate-file": "5.0.0",
    "yaml": "2.6.1",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-conventional": "19.6.0",
    "@commitlint/types": "19.5.0",
    "@testing-library/jest-dom": "6.6.3",
    "@types/better-sqlite3": "7.6.12",
    "@types/luxon": "3.4.2",
    "@types/node": "22.10.2",
    "@typescript-eslint/eslint-plugin": "8.18.0",
    "@typescript-eslint/parser": "8.18.0",
    "@vitest/coverage-v8": "2.1.8",
    "eslint": "9.16.0",
    "globals": "15.13.0",
    "lefthook": "1.9.2",
    "knip": "5.41.0",
    "prettier": "3.4.2",
    "typescript": "5.7.2",
    "typescript-eslint": "8.18.0",
    "vite": "6.0.3",
    "vite-node": "2.1.8",
    "vitest": "2.1.8"
  }
}
