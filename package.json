{
  "name": "lootscraper",
  "version": "2.9.6",
  "description": "RSS feeds and Telegram bot for free game and loot offers.",
  "author": "Eiko Wagenknecht <git@eiko-wagenknecht.de>",
  "license": "CC-BY-NC-SA-4.0",
  "type": "module",
  "main": "dist/main.js",
  "bin": {
    "lootscraper": "./dist/main.js"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "better-sqlite3",
      "esbuild",
      "oxc-resolver",
      "unrs-resolver"
    ],
    "ignoredBuiltDependencies": [
      "lefthook"
    ]
  },
  "scripts": {
    "dev": "cross-env DEBUG=\"grammy*\" vite-node src/main.ts",
    "build": "vite build",
    "start": "node dist/main.js",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:contract": "vitest run --mode contract",
    "test:contract:watch": "vitest watch --mode contract",
    "test:all": "pnpm test && pnpm test:contract",
    "lint": "tsc --noEmit && eslint --fix ./src && prettier --write ./src && biome check --fix --unsafe ./src",
    "lint:eslint": "eslint --fix ./src",
    "lint:prettier": "prettier --write ./src",
    "lint:biome": "biome check --fix --unsafe ./src",
    "format": "biome format . --write",
    "type-check": "tsc --noEmit",
    "check": "pnpm run lint && pnpm run type-check",
    "prepare": "node -e \"process.env.CI || process.env.DOCKER_CONTAINER || process.exit(1)\" || lefthook install",
    "clean:npm": "pnpm dlx rimraf -rf node_modules",
    "sync:npm": "pnpm i --frozen-lockfile",
    "upgrade:npm": "pnpm dlx rimraf pnpm-lock.yaml && pnpm up --latest && pnpm i",
    "knip": "knip",
    "docker:pub:dev": "docker build . -t eikowagenknecht/lootscraper:develop && docker push eikowagenknecht/lootscraper:develop"
  },
  "dependencies": {
    "@apollo/client": "3.13.8",
    "@grammyjs/auto-retry": "2.0.2",
    "@grammyjs/commands": "1.1.0",
    "abort-controller": "3.0.0",
    "basic-ftp": "5.0.5",
    "better-sqlite3": "12.2.0",
    "croner": "9.1.0",
    "cross-env": "7.0.3",
    "grammy": "1.37.0",
    "graphql": "16.11.0",
    "handlebars": "4.7.8",
    "i18next": "25.3.2",
    "kysely": "0.28.2",
    "logform": "2.7.0",
    "luxon": "3.7.1",
    "playwright": "1.54.1",
    "winston": "3.17.0",
    "winston-daily-rotate-file": "5.0.0",
    "winston-transport": "4.9.0",
    "yaml": "2.8.0",
    "zod": "4.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@commitlint/types": "19.8.1",
    "@eslint/js": "9.31.0",
    "@semantic-release/git": "10.0.1",
    "@testing-library/jest-dom": "6.6.3",
    "@types/better-sqlite3": "7.6.13",
    "@types/luxon": "3.6.2",
    "@types/node": "24.0.13",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.31.0",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-jsdoc": "51.3.4",
    "globals": "16.3.0",
    "jiti": "2.4.2",
    "knip": "5.61.3",
    "lefthook": "1.12.2",
    "prettier": "3.6.2",
    "semantic-release": "24.2.7",
    "typescript": "5.8.3",
    "typescript-eslint": "8.36.0",
    "vite": "7.0.4",
    "vite-node": "3.2.4",
    "vitest": "3.2.4"
  }
}
